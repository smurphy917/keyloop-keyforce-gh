<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <environments>Default</environments>
    <formulas>
        <name>closeResult</name>
        <dataType>String</dataType>
        <expression>IF(
    {!$Record.Recipient_Signed_on_Paper__c},&quot;Pending Order&quot;,
    IF (
        AND(
            {!$Record.Quote__r.PO_Required__c},
            ISBLANK({!$Record.Quote__r.PO_Number__c})
        ), &quot;Pending PO number&quot;,
        &quot;Ordered&quot;
    )
)</expression>
    </formulas>
    <interviewLabel>DocuSign Status - Updated (Completed) {!$Flow.CurrentDateTime}</interviewLabel>
    <label>DocuSign Status - Updated (Completed)</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Quote_Close_Result</name>
        <label>Update Quote Close Result</label>
        <locationX>176</locationX>
        <locationY>335</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Quote__c</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Close_Result__c</field>
            <value>
                <elementReference>closeResult</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Customer_Accepted__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Quote_Signature_Date__c</field>
            <value>
                <elementReference>$Record.dfsle__Completed__c</elementReference>
            </value>
        </inputAssignments>
        <object>SBQQ__Quote__c</object>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Quote_Close_Result</targetReference>
        </connector>
        <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
        <filterLogic>and</filterLogic>
        <filters>
            <field>dfsle__Status__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Completed</stringValue>
            </value>
        </filters>
        <object>dfsle__EnvelopeStatus__c</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
